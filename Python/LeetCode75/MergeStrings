class Solution(object):
    def mergeAlternately(self, word1, word2):
        """
        :type word1: str
        :type word2: str
        :rtype: str
        """
        i = 0
        merged = []
        while i < len(word1) or i < len(word2):
            if i<len(word1):
                merged.append(word1[i])
            if i<len(word2):
                merged.append(word2[i])
            i +=1
        return ''.join(merged)